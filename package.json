{
  "name": "invoicify",
  "version": "1.0.0",
  "description": "Invoicify is a sample CRMS for web developers. It can used to handle invoices, project management amongst other things ",
  "main": "index.js",
  "scripts": {
    "client-build": "cd client && yarn && yarn run build",
    "server-deploy": "cd server && npm run deploy",
    "copyFolder": "copyfiles -u 1 \"./client/build/**/*\" \"./server/public\"",
    "deploy": "npm run copyFolder &&  npm run server-deploy "
  },
  "engines": {
    "node": "16.14.0",
    "npm": "8.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/udabasili/invoicify.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/udabasili/invoicify/issues"
  },
  "homepage": "https://github.com/udabasili/invoicify#readme",
  "dependencies": {
    "craco": "^0.0.3"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1"
  }
}
